<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>ind.html</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>am.hitech.jdbc.controller.HelloServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>am.hitech.jdbc.controller.WelcomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ForgetPasswordServlet</servlet-name>
        <servlet-class>am.hitech.jdbc.controller.ForgetPasswordServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>am.hitech.jdbc.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SessionService</servlet-name>
        <servlet-class>am.hitech.jdbc.controller.SessionServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>InsertNumbers</servlet-name>
        <servlet-class>am.hitech.jdbc.controller.InputNumbersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ForgetPasswordServlet</servlet-name>
        <url-pattern>/forget</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SessionService</servlet-name>
        <url-pattern>/sum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertNumbers</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
</web-app>
